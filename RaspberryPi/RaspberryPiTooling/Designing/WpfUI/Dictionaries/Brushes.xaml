<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ml="clr-namespace:ARGUSnet.RaspberryPiTooling.WpfUI.Models.Led"
                    xmlns:local="clr-namespace:ARGUSnet.RaspberryPiTooling.WpfUI.Dictionaries">

    <LinearGradientBrush x:Key="BrushHeaderBackground" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#66000088" Offset="0" />
        <GradientStop Color="#BB000088" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BrushButtonDefault" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#66000088" Offset="0" />
        <GradientStop Color="#BB000088" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BrushButtonMouseOver" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#55000099" Offset="0" />
        <GradientStop Color="#AA000088" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush
        x:Key="BrushButtonVisualLed"
        Color="{Binding Color}" />
</ResourceDictionary>